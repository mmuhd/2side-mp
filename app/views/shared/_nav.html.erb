<section class="top-nav">
<%= link_to  "CodeMP", root_path, class:"top-nav-link" %>
    <%= link_to  "Browse", show_path, class:"top-nav-link" %>
 <% if user_signed_in? %>
    <div class="filter">
      <%= form_with url: show_id_path, local: true do |form| %>
      <div>
          <%= form.text_field :like %>
          <%= form.submit "Search", id: "Submit" %>
      </div>
      <% end %>
    </div>
    <div>
      <p id="username"><%= "Hello #{current_user.name.capitalize}" %></p>
      <div id="user-nav">
        <span><%= link_to 'Logout', destroy_user_session_path, method: "delete"%></span>
        <span><%= link_to 'Dashboard', user_dashboard_path %></span>
      </div>
    </div>
    <% if current_user.avatar.attached? %>
    <div id="avatar">
      <%= image_tag current_user.avatar, width: 120 %>
    </div> 
  <% end %>

 <% else %>
  <p><%= link_to 'Login', new_user_session_path, class:"top-nav-link"%> 
    <%= link_to 'Sign Up', new_user_registration_path, class:"top-nav-link"%>
  </p>
 <% end %>



</section>