<h1>Listings</h1>

<div class="filter">

<%= form_with url: show_search_path, local: true do |form| %>
<div>
<%= form.select :category, ['Website', 'Domain', 'App'] %>
<%= form.select :tag, ['Website', 'Domain', 'App'] %>
<%= form.text_field :like %>
<%= form.submit "Search", id: "Submit" %>
</div>
<% end %>


</div>





<div class="listings">
    <% @listings.each do |i| %>
    <% if i.alive %>
    <div class="new-listing">
    <div class="listing-info">
    <%= link_to  "this will be a image", listing_path(i.id) %>
    <%= content_tag 'span', i.name, class: "listing-name" %>
    <%= content_tag 'span', "$#{i.price.round(2)}" , class: "listing-price" %>
    </div>
    <div class="user-info">

    </div>
    </div>
    <% end %>
    <% end %>
</div>
